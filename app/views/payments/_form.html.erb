<div class="form_wrapper">
<%= form_with(model: [category, payment]) do |form| %>
  <%= payment.name %>
  <%= payment.amount %>
 
  <% if payment.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(payment.errors.count, "error") %> prohibited this payment from being saved:</h2>

      <ul>
        <% payment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="transaction_form_container">
  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "input" %>
  </div>

  <div>
    <%= form.label :amount, style: "display: block" %>
    <%= form.text_field :amount, class: "input" %>
  </div>
  <div>
    <%= form.label :category_id%>
    <div class="category_select">
      <%= form.collection_check_boxes(:category_ids, current_user.categories, :id, :name) %>
    </div>
  </div>
  <div>
    <%= form.submit class: "form_submit_btn input" %>
  </div>
  </div>
<% end %>
</div>

