<p style="color: green"><%= notice %></p>

<h1>Categories</h1>

<div id="categories">
  <% @categories.each do |category| %>
    <%= render category %>
    <p>
      <%= link_to "Show this category", category %>
    </p>
    <%= button_to "Remove", category, method: :delete, data: { confirm: "Are you sure?" }, class: "actions" %>
  <% end %>
</div>

<%= link_to "New category", new_category_path %>
